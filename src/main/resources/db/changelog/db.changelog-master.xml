            <column name="password" value="example"/>
            <column name="role" value="ADMIN"/>
            <column name="gender" value="FEMALE"/>
        </insert>
    </changeSet>
    
    <changeSet id="20240228-create-ticket" author="Tuğçe Usta">
        <createTable tableName="ticket" schemaName="public">
            <column name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="pk_ticket_id"/>
            </column>
            <column name="seat_info" type="varchar(250)">
            </column>
            <column name="is_active" type="boolean">
            </column>
            <column name="price" type="float">
            </column>
            <column name="user_account_id" type="bigint">
            </column>
            <column name="bus_id" type="bigint">
            </column>
        </createTable>
        <addAutoIncrement tableName="ticket" columnName="id" columnDataType="bigint" startWith="100" incrementBy="1"/>

    </changeSet>
    
    <changeSet id="20240228-create-company" author="Tuğçe Usta">
        <createTable tableName="company" schemaName="public">
